<style>
    .container-chat {
        width: 400px;
        height: 480px;
        z-index: 1000;
        position: fixed;
        bottom: 40px;
        right: 20px;
    }
    .chat-bubble {
        width: 100%;
        height: 100%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
    }

    .bubble-btn {
        border-radius: 50%;
        font-size: 16px;
        padding: 20px;
        position: fixed;
        bottom: 20px;
        right: 20px;
        background: white;
        color: black;

        z-index: 1000000;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    .hidden {
        display: none;
    }

    .nav-chat {
        width: 100%;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: end;
        background: gray;
        padding-inline: 10px;
          
    }

    .nav-chat span {
        cursor: pointer;
        padding: 5px;
    }

</style>

<div class="container-chat">
    <div class="chat-bubble hidden" id="bubble-chat">
        <div class="nav-chat">
            <span onclick="showChatBox()">x</span>
        </div>
        <weavy-chat class="test" uid="@Model.Uid"/>
    </div>
</div>

<button onclick="showChatBox()" class="bubble-btn" id="btn-chat">
    <span data-feather="message-circle">
</button>

<script>
    function showChatBox() {
        var boxChat = document.getElementById("bubble-chat");
        var btnChat = document.getElementById("btn-chat");
        btnChat.classList.toggle("hidden")
        boxChat.classList.toggle("hidden");
    }
</script>


